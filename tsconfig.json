{
  "compilerOptions": {
    "target": "es5",
    "outDir": "build",
    "module": "es2015",
    "moduleResolution": "node",
    "lib": ["es6", "es2017.intl", "dom"],
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "removeComments": true,
    "strict": true,
    "baseUrl": "./",
    "types": ["jest"],
    "noEmit": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*", "test/**/*"]
}
